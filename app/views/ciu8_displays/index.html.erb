              new_ciu8_display_path,
              data: { turbo_frame: dom_id(Ciu8Display.new) } %>

  <%= turbo_frame_tag Ciu8Display.new %>

  <%= turbo_frame_tag "ciu8_displays" do %>
    <%= render @ciu8_displays %>
